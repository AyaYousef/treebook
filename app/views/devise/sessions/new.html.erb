

<div class="row">
  <div class="col-md-4">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: {class:"panel panel-success"}) do |f| %>
        <div class="panel-heading">
          <h2>Log in</h2>
        </div>
        <div class="panel-body">
          <%= f.input :email %>
          <%= f.input :password %>

          <% if devise_mapping.rememberable? -%>
              <%= f.input :remember_me, as: :boolean %>
          <% end -%>

          <div class="actions">
            <%= f.button :submit, 'LogIn' %>
          </div>
        </div>

    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
